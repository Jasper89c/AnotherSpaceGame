@page
@model AnotherSpaceGame.Areas.Manual.Pages.Other.UltimateWeaponWinnersModel
@{
    ViewData["Title"] = "Ultimate Weapon Winners";
    Layout = "~/Views/Shared/_LayoutGame.cshtml";
}

<h2>Ultimate Weapon Winners</h2>

@if (Model.Winners != null && Model.Winners.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Days Taken</th>
                <th>Total Planets</th>
                <th>Power Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var winner in Model.Winners)
            {
                <tr>
                    <td>@winner.Date.ToString("g")</td>
                    <td>@winner.Name</td>
                    <td>@winner.DaysTaken</td>
                    <td>@winner.TotalPlanets</td>
                    <td>@winner.PowerRating</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No winners found.</div>
}