@page
@model AnotherSpaceGame.Areas.Game.Pages.FederationBattleLogsModel
@{
    ViewData["Title"] = "Federation Battle Logs";
    Layout = "~/Views/Shared/_LayoutGame.cshtml";
    var prevDisabled = Model.PageNumber <= 1 ? "disabled" : "";
    var nextDisabled = Model.PageNumber >= Model.TotalPages ? "disabled" : "";
}

<h2>Federation Battle Logs</h2>

@if (Model.BattleLogs != null && Model.BattleLogs.Any())
{
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Date</th>
                <th>Attacker</th>
                <th>Defender</th>
                <th>Outcome</th>
                <th>Fleet Report</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.BattleLogs.Count; i++)
            {
                var log = Model.BattleLogs[i];
                var collapseId = $"fleetReportCollapse_{i}";
                var buttonId = $"toggleFleetReportBtn_{i}";
            <tr>
                <td>@log.DateAndTime.ToLocalTime().ToString("g")</td>
                <td>@log.Attacker</td>
                <td>@log.Defender</td>
                <td>@log.Outcome</td>
                    <td>
                        <button id="@buttonId"
                                class="btn btn-sm btn-primary"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#@collapseId"
                                aria-expanded="false"
                                aria-controls="@collapseId"
                                data-bs-toggle-text="Hide Fleet Report">
                            Show Fleet Report
                        </button>
                    </td>
                </tr>
                <tr class="collapse mt-2" id="@collapseId">
                    <td colspan="5">
                        <div>
                            <div class="card card-body">
                                @Html.Raw(log.FleetReport)
                            </div>
                        </div>
                    </td>
                </tr>            
        }
        </tbody>
    </table>

    <nav aria-label="Battle log pagination" class="mt-3">
        <ul class="pagination">
            <li class="page-item @prevDisabled">
                <a class="page-link" asp-route-PageNumber="@(Model.PageNumber - 1)">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-route-PageNumber="@i">@i</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link" asp-route-PageNumber="@(Model.PageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info mt-3">No battle logs found for your federation.</div>
}
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Find all collapse elements for fleet reports
            document.querySelectorAll('.collapse[id^="fleetReportCollapse_"]').forEach(function (collapseEl) {
                var btn = document.querySelector('button[data-bs-target="#' + collapseEl.id + '"]');
                if (!btn) return;

                collapseEl.addEventListener('show.bs.collapse', function () {
                    var toggleText = btn.getAttribute('data-bs-toggle-text') || 'Hide Fleet Report';
                    btn.textContent = toggleText;
                });
                collapseEl.addEventListener('hide.bs.collapse', function () {
                    btn.textContent = 'Show Fleet Report';
                });
            });
        });
    </script>
}