@page
@model AnotherSpaceGame.Areas.Game.Pages.FederationCreateModel
@{
    ViewData["Title"] = "Create Federation";
    Layout = "~/Views/Shared/_LayoutGame.cshtml";
}

@if (Model.hasFederation != true)
{    
<h2>Create a Federation</h2>
@if (!string.IsNullOrEmpty(Model.FeedbackMessage))
{
    <div class="alert alert-info">@Model.FeedbackMessage</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="FederationName">Federation Name</label>
        <input asp-for="FederationName" class="form-control" maxlength="50" required />
    </div>
    <div class="form-group">
        <label asp-for="FederationDescription">Description</label>
        <textarea asp-for="FederationDescription" class="form-control" rows="3" maxlength="200" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create Federation</button>
    @Html.AntiForgeryToken()
</form>

<div class="alert alert-secondary mt-3">
    <strong>Requirements:</strong>
    <ul>
        <li>Cost: 100 credits</li>
        <li>Minimum Power Rating: 250</li>
        <li>You cannot already be a member of a federation</li>
    </ul>
</div>
}
else
{
    <div class="alert alert-warning">You are already a member of a federation and cannot create a new one.</div>
}
