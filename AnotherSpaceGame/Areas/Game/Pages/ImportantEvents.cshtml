@model AnotherSpaceGame.Areas.Game.Pages.ImportantEventsModel  
@using AnotherSpaceGame.Models  
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{  
    Layout = "~/Views/Shared/_LayoutGame.cshtml";  
    ViewData["Title"] = "Important Events";  

    // Get all event types for the dropdown  
    var eventTypes = Enum.GetValues(typeof(ImportantEventTypes)).Cast<ImportantEventTypes>().ToList();  
    var selectedType = Request.Query["eventType"].FirstOrDefault(); // Fixed 'Context' to 'Request'  

    var prevDisabled = Model.PageNumber <= 1 ? "disabled" : "";  
    var nextDisabled = Model.PageNumber >= Model.TotalPages ? "disabled" : "";  

   
}  

<h2>Important Events</h2>  
<p>Here you can find a list of important events that have occurred in the game.</p>  

@* UW STUFF *@
@if (Model.Usernames.Count > 0)
{
    <div class="alert alert-info">
        <p>WARNING!: The following users have completed the Kal-Zul Hektar:
            @foreach (var s in Model.Usernames)
            {
                s.ToString();
            }            
        </p>
    </div>

}
@if(Model.serverStats.UWEnabled == true)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <h5 class="card-header">
                        Ultimate Weapon Active!!
                    </h5>
                    <div class="card-body">
                        <p class="card-text">
                            <h3>@Model.serverStats.UWHolderName has actived the Ultimate Weapon</h3>
                            Attack Restrictions have been lifted against the Empire!
                            Stop this Empire before they destroy the galaxy!
                        </p>
                    </div>
                    <div class="card-footer">
                        <h3>Time Remaining</h3>
                        @{
                            // Fix for CS1061: 'DateTime' does not contain a definition for 'TotalDays'
                            // The 'KalZulLoktarUnlockTimer' property is likely a DateTime, not a TimeSpan. Adjust the code accordingly.
                            var timeRemaining = Model.userProject.KalZulLoktarUnlockTimer - DateTime.Now; // Calculate the remaining time as a TimeSpan  
                            var days = timeRemaining.TotalDays;  
                            var hours = timeRemaining.Hours;  
                            var minutes = timeRemaining.Minutes;  
                            var seconds = timeRemaining.Seconds;  
                        }
                        <div class="progress">
                            <div class="progress">
                                <p>Days: @days Hours: @hours Minutes: @minutes</p>
                                <div class="progress-bar" role="progressbar"
                                     style="width:@Model.UWProgressPercent%;"
                                     aria-valuenow="@Model.UWProgressPercent"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @Model.UWProgressPercent%
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
}


<form method="get" class="mb-3">  
    <div class="row g-2 align-items-center">  
        <div class="col-auto">  
            <label for="eventType" class="col-form-label">Filter by Event Type:</label>  
        </div>  
        <div class="col-auto">  
            <select id="eventType" name="eventType" class="form-select" onchange="this.form.submit()">  
                <option value="">All</option>  
                @foreach (var type in eventTypes)  
                {  
                    var isSelected = selectedType == type.ToString() ? "selected" : "";  
                    <option value="@type" selected="@isSelected">  
                        @type  
                    </option>  
                }  
            </select>  
        </div>  
    </div>  
</form>  

@if (Model.Events != null && Model.Events.Any())  
{  
    <ul class="list-group">  
        @foreach (var ev in Model.Events)  
        {  
            <li class="list-group-item">  
                <span class="text-muted" style="font-size:small;">@ev.DateAndTime.ToLocalTime().ToString("g")</span>  
                <div>@Html.Raw(ev.Text)</div>  
            </li>  
        }  
    </ul>  

    <nav aria-label="Event pagination" class="mt-3">  
        <ul class="pagination">  
            <li class="page-item @prevDisabled">  
                <a class="page-link" asp-route-PageNumber="@(Model.PageNumber - 1)">Previous</a>  
            </li>  
            @for (int i = 1; i <= Model.TotalPages; i++)  
            {  
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">  
                    <a class="page-link" asp-route-PageNumber="@i">@i</a>  
                </li>  
            }  
            <li class="page-item @nextDisabled">  
                <a class="page-link" asp-route-PageNumber="@(Model.PageNumber + 1)">Next</a>  
            </li>  
        </ul>  
    </nav>  
}  
else  
{  
    <div class="alert alert-info mt-3">No important events found.</div>  
}
